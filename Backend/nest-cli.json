{
  "compilerOptions": {
    "assets": [
      "dist/**/*.html",
      "dist/**/*.json"
    ],
    "watchAssets": true
  },
  "generators": [
    {
      "type": "service",
      "path": "src/${name}/${name}.service.ts",
      "style": "class"
    },
    {
      "type": "controller",
      "path": "src/${name}/${name}.controller.ts",
      "style": "class"
    },
    {
      "type": "module",
      "path": "src/${name}/${name}.module.ts",
      "style": "class"
    }
  ]
}